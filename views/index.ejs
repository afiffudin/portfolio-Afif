  <!-- Swiper JS -->
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

  <!-- Inisialisasi Swiper dengan penyesuaian jumlah slide -->
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const slides = document.querySelectorAll('.myPortfolio .swiper-slide');
      const slidesCount = slides.length;

      // Jika tidak ada slide, hentikan
      if (slidesCount === 0) return;

      // Konfigurasi dinamis
      const isFew = slidesCount < 3; // < 3 => gunakan mode numeric slidesPerView
      const swiperOptions = {
        effect: 'coverflow',
        grabCursor: true,
        centeredSlides: true,
        slidesPerView: isFew ? 1 : 'auto',
        coverflowEffect: {
          rotate: isFew ? 18 : 30,
          stretch: 0,
          depth: 140,
          modifier: 1,
          slideShadows: true,
        },
        loop: slidesCount > 1, // loop hanya jika ada minimal 2 slide
        autoplay: slidesCount > 1 ? {
          delay: 3000,
          disableOnInteraction: false
        } : false,
        pagination: {
          el: '.swiper-pagination',
          clickable: true
        },
        breakpoints: {
          640: { slidesPerView: Math.min(1, slidesCount) },
          768: { slidesPerView: Math.min(2, slidesCount) },
          1024: { slidesPerView: Math.min(3, slidesCount) }
        }
      };

      // Buat swiper
      const mySwiper = new Swiper('.myPortfolio', swiperOptions);

      // Jika cuma 1 slide, sembunyikan pagination (opsional)
      if (slidesCount === 1) {
        const pag = document.querySelector('.swiper-pagination');
        if (pag) pag.style.display = 'none';
      }
    });
  </script>
</body>
