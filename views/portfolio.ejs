<section id="portfolio" class="py-12">
  <h2 class="text-2xl font-bold mb-6">Portfolio</h2>
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% portfolios.forEach(project => { %>
      <a href="/portfolio/<%= project.id %>" class="card rounded-lg overflow-hidden shadow-lg block" data-sr>
        <img src="<%= project.image %>" alt="<%= project.title %>" class="w-full h-40 object-cover">
        <div class="p-4">
          <h3 class="font-semibold"><%= project.title %></h3>
          <p class="text-sm text-gray-600"><%= project.description %></p>
        </div>
      </a>
    <% }) %>
  </div>
</section>
